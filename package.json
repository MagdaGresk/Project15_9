{
  "name": "PROJECT15_9",
  "version": "1.0.0",
  "description": "GITHUB users finder",
  "main": "script.js",
  "scripts": {
    "test": "npm-run-all test:*",
    "test:html": "nu-html-checker *.html",
    "init-project": "npm install && npm-run-all init:*",
    "init:dirs": "mkdir -p sass css vendor images js",
    "init:files": "touch README.md index.html sass/style.scss script.js",
    "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
    "build": "npm-run-all build:* test",
    "build:clean": "rimraf css",
    "build:sass": "node-sass --output-style compact -o css sass",
    "build:autoprefixer": "autoprefixer-cli css/style.css",
    "build-dev:sass": "node-sass --output-style expanded --source-map true -o css sass",
    "watch": "npm-run-all build -p watch:*",
    "watch:sassprefixer": "onchange sass -- node-sass --output-style expanded --source-map true -o css sass -- autoprefixer-cli -o css/style.css",
    "watch:browser-sync": "browser-sync start --server --files css/*.css *.html",
    "build": "babel script.js --watch --out-file build.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-latest": "^6.24.1",
    "browser-sync": "^2.23.6",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "nu-html-checker": "^0.1.0",
    "onchange": "^3.3.0",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1"
  }
}
